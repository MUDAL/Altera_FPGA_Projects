library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.NUMERIC_STD.ALL;

--ROM: to map digits to signals to drive the 7 segment display.
--g,f,e,d,c,b,a are the individual LED segments.
entity seg_rom is
  port(clk: in std_logic;
       addr: in std_logic_vector(3 downto 0);
       data_out: out std_logic_vector(6 downto 0));
end seg_rom;

architecture seg_rom_rtl of seg_rom is
begin
   sync_rom: process(clk)
   begin
      if rising_edge(clk) then
         ------------------------------"gfedcba"
         case addr is
            when "0000" => data_out <= "1000000";
            when "0001" => data_out <= "1111001";
            when "0010" => data_out <= "0100100";
            when "0011" => data_out <= "0110000";
            when "0100" => data_out <= "0011001";
            when "0101" => data_out <= "0010010";
            when "0110" => data_out <= "0000010";
            when "0111" => data_out <= "1111000";
            when "1000" => data_out <= "0000000";
            when "1001" => data_out <= "0010000";
            when others => data_out <= "1000000";
         end case;
      end if;
   end process;
end seg_rom_rtl;